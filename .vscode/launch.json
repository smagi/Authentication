{
    "version": "0.2.0",
    "configurations": [
      

      
      {
        "name": "WebAuth.Api",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/bin/Debug/net7.0/WebAuth.Api.exe",
        "args": [],
        "cwd": "${workspaceFolder}/WebAuth.Api",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/Views"
        }
      },
      {
        "name": "WebAuth.Client",
        "type": "blazorwasm",
        "request": "launch",
        "browser": "edge",                 
        "url": "http://localhost:5157",     
        "cwd":"${workspaceFolder}/WebAuth.Client"
      }
    ]
  }

